!!! html5
%html
  %head
    %meta{ :charset => 'utf-8' }
    %title [ADMIN] - Conference Education
    %meta{ :name => 'viewport', :content => 'width=device-width; initial-scale=1.0; maximum-scale=1.0;' }
    //%link{ :rel => 'shortcut icon', :href => '/favicon.ico' }
    //%link{ :rel => 'apple-touch-icon', :href => '/apple-touch-icon.png' }
    %link{:rel => "stylesheet/less", :href => "/stylesheets/application.less", :type => "text/css"}
    %link{:rel => "stylesheet/less", :href => "/stylesheets/admin.less", :type => "text/css"}
    = javascript_include_tag 'less'
    = csrf_meta_tag
  %body
    #container
      %header
        %h1 Conference Education <span>Admin</span>
      = flash_messages
      = render 'shared/navigation'
      #content
        = yield
      %footer
    - if Rails.env.production?
      = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    - else
      = javascript_include_tag 'jquery'

    = javascript_include_tag :defaults
    = javascript_include_tag 'plugins/embedly-jquery/jquery.embedly'
    = javascript_include_tag 'presentations/show'

