!!! html5
%html
  %head
    %title Conference Education
    = csrf_meta_tag
    %meta{ :charset => 'utf-8' }
    %meta{ :name => 'viewport', :content => 'width=device-width; initial-scale=1.0; maximum-scale=1.0;' }
    //%link{ :rel => 'shortcut icon', :href => '/favicon.ico' }
    //%link{ :rel => 'apple-touch-icon', :href => '/apple-touch-icon.png' }
    %link{:rel => "stylesheet/less", :href => "/stylesheets/application.less", :type => "text/css"}
    = javascript_include_tag 'less'
  %body
    #container
      %header
        %h1= link_to "Conference Education", "/"
        %ul
          %li Stephen Korecky
          %li= link_to "My info"
      = flash_messages
      = render 'shared/navigation'
      #content
        = yield
      %footer
        %p Copyright &copy; #{Time.now.strftime("%Y")}, All Rights Reserved.
    - if Rails.env.production?
      = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    - else
      = javascript_include_tag 'jquery'

    = javascript_include_tag :defaults
    = javascript_include_tag 'presentations/show'
