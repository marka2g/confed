!!! html5
%html
  %head
    %title= yield(:title) || "Confed"
    = csrf_meta_tag
    %meta{ :charset => 'utf-8' }
    %meta{ :name => 'viewport', :content => 'width=device-width; initial-scale=1.0; maximum-scale=1.0;' }
    //%link{ :rel => 'shortcut icon', :href => '/favicon.ico' }
    //%link{ :rel => 'apple-touch-icon', :href => '/apple-touch-icon.png' }
    = stylesheet_link_tag 'application'
    %script{:type => "text/javascript", :src => "http://use.typekit.com/wnz4hjz.js"}
    :javascript
      try{Typekit.load();}catch(e){}
  %body
    #container
      %header
        %h1= link_to "confed", root_path
      = flash_messages
      = render 'shared/navigation'
      #content
        = yield
      %footer
        %p Copyright &copy; #{Time.now.strftime("%Y")}, All Rights Reserved.
        %p A #{link_to "Matt Polito", "http://twitter.com/mattpolito"}, #{link_to "Adam Walters", "http://twitter.com/ajwalters"} & #{link_to "Stephen Korecky", "http://twitter.com/skoreky"} Joint
    - if Rails.env.production?
      = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    - else
      = javascript_include_tag 'jquery'

    = javascript_include_tag 'jquery.preloader.js'
    = javascript_include_tag :defaults
    = javascript_include_tag 'presentations/show'
    = javascript_include_tag 'uservoice'
    = render 'shared/reinvigorate' if Rails.env.production?
