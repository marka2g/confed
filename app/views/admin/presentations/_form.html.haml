= form_for [:admin, @presentation] do |f|
  %fieldset
    = render "shared/error_messages", :target => presentation
    %ul
      %li
        = f.label :event_id
        = f.collection_select :event_id, events, :id, :name, :prompt => true
      %li
        = f.label :speaker_id
        = f.collection_select :speaker_id, speakers, :id, :name, :prompt => true
      %li
        = f.label :title
        = f.text_field :title
      %li
        = f.label :description, :class => 'textarea'
        = f.text_area :description
      %li
        = f.label :tag_list, "Tags (comma seperated)"
        = f.text_field :tag_list
      
      = f.fields_for :videos do |v|
        %li
          = v.label :url, "Video URI"
          = v.text_field :url
          = v.hidden_field :content

      = f.fields_for :slideshows do |s|
        %li
          = s.label :url, "Slideshow URI"
          = s.text_field :url
          = s.hidden_field :content
    %p.actions
      = f.submit
      = link_to 'Show', @presentation
      \|
      = link_to 'Cancel & Go Back', :back

#speaker_form{ :style => 'display:none;' }
  = render 'admin/speakers/form', :speaker => Speaker.new
#event_form{ :style => 'display:none;' }
  = render 'admin/events/form', :event => Event.new


