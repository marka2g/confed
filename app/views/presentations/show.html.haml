.presentation
  .title= @presentation.title
  .tags= @presentation.tag_list
  .description= @presentation.description
  - if @presentation.videos
    - @presentation.videos.each do |video|
      .video= raw video.content
  - if @presentation.slideshows
    - @presentation.slideshows.each do |slideshow|
      .slideshow= raw slideshow.content
  .speakers
    - @presentation.speakers.each do |speaker|
      .name= link_to speaker, speaker_path(speaker)
  .event
    .name= @presentation.event.name
