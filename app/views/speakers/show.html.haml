%p
  %b Name:
  = @speaker.name
%p
  %b Title:
  = @speaker.title
%p
  %b Location:
  = @speaker.location
%p
  %b Bio:
  = @speaker.bio

- if @speaker.company_url
  %p
    = link_to @speaker.company_name, @speaker.company_url, :target => '_blank'

-if @speaker.twitter
  %p
    = link_to 'Twitter', "http://twitter.com/#{@speaker.twitter}", :target => '_blank'

-if @speaker.blog_url
  %p
    = link_to 'Blog', @speaker.blog_url, :target => '_blank'

%p
  %b 
    Presentations
    - if @speaker.presentations.present?
      %ul
        - @speaker.presentations.each do |presentation|
          %li= link_to presentation.title, presentation

= link_to 'Back', :back
