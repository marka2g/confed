- content_for :atom_feed do 
  = auto_discovery_link_tag(:atom, event_url(@event, :format => :atom))

- meta_content_for(:title) { @event.name }

- meta_content_for(:description) do
  #{@event.name} - #{displayed_date_for(@event)}

%article#event
  - if @presentations.present?
    = render @presentations
  - else
    No presentations are available for this event yet.

%aside#event
  %h2= link_to_if @event.website, @event.name, @event.website, :target => '_blank'
  %h4.display_date= displayed_date_for(@event)
